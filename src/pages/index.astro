---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Footer from "../components/footer.astro";
import MobileHeader from "../components/mobileHeader.astro";
import { execSync } from 'child_process';
import MobileDropdown from "../components/mobileDropdown.astro";
import DesktopNavbar from "../components/desktopNavbar.astro";

const commit = execSync("git rev-parse --short HEAD").toString().trim();
---

<Layout>
	<div
		class="flex flex-col min-h-screen bg-white dark:bg-slate-900 text-slate-900 dark:text-white"
	>

		<MobileHeader />

		<MobileDropdown />



		<div class="flex flex-1">

			<DesktopNavbar />

			<!-- MAIN CONTENT HERE !!-->
			<main class="flex-1">
				<section class="w-full text-center mt-16">
					<h1 class="text-5xl sm:text-8xl font-bold fade-seq">
						aayan shaikh.
					</h1>
					<p class="text-base sm:text-lg mt-4 opacity-80 fade-seq">
						Circuit boards. Shell commands. Building the future.
					</p>
				</section>

				<section
					class="max-w-2xl mx-auto mt-12 px-6 text-lg leading-relaxed space-y-5"
				>
					<p class="fade-seq">
						Hey! I'm Aayan. üëã I like working on embedded systems,
						Linux, and building cool hardware or software projects.
					</p>

					<p class="fade-seq">
						I am an undergraduate student at the University of
						Guelph, studying Computer Engineering üñ•Ô∏è‚öôÔ∏è (Co-op).
					</p>

					<p class="fade-seq">
						Some cool projects I've engineered include a custom
						keyboard designed from scratch, my own development board
						(think Arduino) featuring LoRa communication and battery
						management, and an at-home hydrogen generation system
						concept (won 1st place!). If this sounds cool, check
						these projects out in the Projects section!
					</p>

					<p class="fade-seq">
						I am actively planning and exploring new startup ideas,
						looking to build the next impactful project. Also, I
						love collaborating on projects! If you have an idea,
						feel free to reach out.
					</p>
				</section>
			</main>
		</div>
	<Footer commit={commit} />
	</div>

	<script>
		// Preload project cover images on homepage load to speed up projects page
		window.addEventListener('load', () => {
			const projectCovers = [
				"/x-70/pic1.png",
				"/drone/Screenshot 2025-08-16 165630.png",
				"/kb-01/Screenshot 2025-06-17 155354.png",
				"/group/Screenshot 2025-08-11 232536.png",
				"/ieee heart/first image.png",
				"/SUD/Screenshot 2025-09-14 073614.png",
				"/H2aHome/awdad.jpg",
				"/splitboard/Screenshot 2025-08-04 044314.png",
				"/sweatpad/Screenshot 2025-06-07 163622.png",
				"/miniwaymo/Screenshot 2026-01-11 011526.png",
				"/facetracker/OpenCV-open-source-new-version-released.jpg",
				"/mouse/Screenshot 2025-07-29 155358.png",
			];
			projectCovers.forEach((src) => {
				const img = new Image();
				img.src = src;
			});
		});
	</script>

