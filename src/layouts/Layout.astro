---

import "../styles/global.css";

interface Props {
	title?: string;
}

const { title = "AayanShaikh.co" } = Astro.props;

---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="./scalar-logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />

		<script>
			window.addEventListener('load', () => {
				const nodes = Array.from(document.querySelectorAll('.fade-seq'));
				nodes.forEach((el, idx) => {
					if (!(el instanceof HTMLElement)) return;
					const delay = idx * 80;
					el.style.animationDelay = `${delay}ms`;
					setTimeout(() => {
						el.classList.add('is-visible');
					}, delay);
				});
			});
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
